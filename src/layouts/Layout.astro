---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ButtonUp from '../components/ButtonUp.astro';
---

<!doctype html>
<html lang='en'>
  <head>
    <!-- Meta Tags -->
    <meta charset='UTF-8' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />

    <!-- Icons -->
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!-- OG -->

    <!-- Fonts -->

    <!-- Font Awesome -->
    <script src='https://kit.fontawesome.com/c4744f2d2d.js' crossorigin='anonymous'></script>

    <title>{title}</title>
  </head>
  <body>
    <Header />
    <ButtonUp />
    <main class='container-main'>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Inter_Font';
    font-style: normal;
    src: url('/fonts/Inter_Font.ttf');
  }

  * {
    box-sizing: border-box;
  }

  :root {
    --bg-color: #0b1622;
    --bg-color-transparent: #0b162238;

    --font-family: 'Inter_Font', sans-serif;

    --text-color-I: #edf2f4;
    --text-color-II: #a6aebf;
    --text-color-III: red;

    --max-width: 1000px;
    --min-height: 50vh;
    --size-header: 50px;
  }

  html,
  body {
    padding: 0;
    margin: 0;
    background-color: var(--bg-color);
    font-family: var(--font-family);
    --webkit-tex-size-adjust: 100%;
  }

  .container-main {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: var(--max-width);
    padding: 1rem;
    padding-top: calc(var(--size-header) + 10px);
    margin: 0 auto;
    min-height: var(--min-height);
    position: relative;
  }

  .main-title {
    margin: 5px 0;
    line-height: 1.15;
    font-size: 2.5em;
    color: var(--text-color-I);
  }

  .main-title-h2 {
    margin: 5px 0;
    line-height: 1.15;
    font-size: 1.8em;
    color: var(--text-color-I);
  }

  .main-title-h3 {
    margin: 5px 0;
    line-height: 1.15;
    font-size: 1.5em;
    color: var(--text-color-I);
  }

  .main-subtitle {
    margin: 5px 0;
    color: var(--text-color-II);
  }

  .main-text {
    color: var(--text-color-II);
  }

  .main-text b {
    font-weight: bold;
    color: var(--text-color-III);
  }

  .main-text a {
    font-weight: bold;
    color: var(--text-color-II);
  }

  .main-text a:hover {
    color: var(--text-color-I);
  }

  .main-button {
    display: inline-block;
    margin-top: 1rem;
    margin-right: 1.5rem;
    padding: 0;
    cursor: pointer;
    font-weight: 400;
    line-height: 1.5;
    position: relative;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    color: var(--text-color-I);
  }

  .main-button:hover {
    color: var(--text-color-I);
  }

  .main-button:hover .main-button-content:before {
    width: calc(100% + 2rem);
  }

  .main-button-container {
    z-index: 2;
    display: block;
    overflow: hidden;
    position: relative;
    padding: 0.5rem 1.5rem;
    border: 0.1rem solid var(--text-color-III);
    box-shadow: inset 0 0 0 0.1rem transparent;
  }

  .main-button-content:before {
    top: 0;
    width: 0;
    z-index: -1;
    content: '';
    left: -0.8rem;
    display: block;
    bottom: -0.1rem;
    position: absolute;
    transition: all 0.2s ease-in-out;
    background-color: var(--text-color-III);
  }

  ::-webkit-scrollbar {
    width: 0.3rem;
    background-color: #111;
    border-radius: 0.5rem;
  }

  ::-webkit-scrollbar-thumb {
    background-color: #505050;
    border-radius: 0.5rem;
  }
</style>
