<header class='container-header'>
  <nav class='nav-header'>
    <a href='/' class='nav-title'> >_ MrFantasma</a>

    <button class='nav-toggle' id='nav-toggle-id'>
      <i class='fas fa-bars'></i>
    </button>

    <div class='nav-list' id='nav-list-id'>
      <a class='nav-menu' href='/'>Inicio</a>
      <a class='nav-menu' href='/#about'>Sobre Mi</a>
      <a class='nav-menu' href='/#proyects'>Proyects</a>
    </div>
  </nav>
</header>

<style>
  .container-header {
    width: 100%;
    height: var(--size-header);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5;
  }

  .nav-header {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    backdrop-filter: blur(10px);
    background-color: var(--bg-color-transparent);
  }

  .nav-header a {
    color: var(--text-color-I);
    text-decoration: none;
  }

  .nav-title {
    margin: 0;
    color: var(--text-color-I);
    font-size: 1.5rem;
    font-weight: bold;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    margin: 0;
  }

  .nav-list {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .nav-list.show {
    display: block;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    padding: 1rem;
    background-color: #0b1622cc;
  }

  .nav-menu {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .nav-toggle {
      display: block;
      color: var(--text-color-I);
    }

    .nav-list {
      display: none;
    }

    .nav-menu {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-top: 1rem;
    }

    .nav-menu a {
      display: block;
      margin-bottom: 0.5rem;
    }
  }
</style>

<script>
  let navButton = document.getElementById('nav-toggle-id');
  let showNav = false;

  navButton!.addEventListener('click', () => {
    let navList = document.getElementById('nav-list-id');

    if (showNav) {
      navList!.classList.remove('show');
      showNav = false;
    } else {
      navList!.classList.add('show');
      showNav = true;
    }
  });
</script>
