---
interface Props {
  cardImage: string;
  cartLocation: string;
  cardTitle: string;
  cardSkills: string;
  cardUrl: string ;
}

const { cardImage, cartLocation, cardTitle, cardSkills, cardUrl } = Astro.props;
---

<a class=`card-project ${cartLocation}` href=`/proyect/${cardUrl}`>
  <div class='container'>
    <img src={cardImage} />

    <div class='card-project-content'>
      <div class='card-project-container'>
        <p class='card-title'>{cardTitle}</p>

        <ul class='card-list-skills'>
          <li>{cardSkills}</li>
        </ul>
      </div>
    </div>
  </div>
</a>

<style>
  .card-project {
    width: 100%;
    position: relative;
    cursor: pointer;
    border-radius: 5px;
  }

  .card-project .container {
    width: 100%;
    height: 100%;
  }

  .card-project img {
    width: 100%;
    object-fit: cover;
    border-radius: 5px;
    border-style: none;
  }

  .card-project a {
    text-decoration: none;
  }

  .div-1 {
    grid-area: 1 / 1 / 3 / 3;
  }

  .div-2 {
    grid-area: 1 / 3 / 2 / 4;
  }

  .div-3 {
    grid-area: 2 / 3 / 3 / 4;
  }

  .card-project-content {
    border-radius: 5px;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 1rem;
    display: flex;
    opacity: 0;
    justify-content: flex-end;
    align-items: flex-start;
    flex-direction: column;
    background: linear-gradient(rgba(0, 0, 0, 0.1) 10%, rgba(0, 0, 0, 0.78) 80%);
    transition: opacity 0.3s ease-in-out 0s;
  }

  .card-project:hover .card-project-content {
    opacity: 1;
  }

  .card-project .card-project-container {
    transform: none;
    transition: transform 0.3s ease-in-out 0s;
  }

  .card-project:hover .card-project-container {
    transform: translateY(-10%);
  }

  .card-project .card-title {
    margin: 0;
    font-weight: 700;
    color: var(--text-color-I);
  }

  .card-project .card-list-skills {
    padding: 0;
    color: var(--text-color-II);
    display: flex;
    gap: 5px;
    list-style: none;
    margin: 0;
    font-size: 0.7rem;
  }
</style>
